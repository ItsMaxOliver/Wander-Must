<div class="container col-sm-12 col-md-6 col-lg-4">
    <div class="suitcaseCard" data-toggle="modal" data-target="#opencase-modal">
        <div class="card bg-dark text-white no-shadow">
            <div class="suitcaseWrapper card-img">
                <img class="suitcasePhoto img-responsive" src="" alt="Card image" data-id="{{this.id}}" data-city={{Locale.locale_city}} data-admin={{Locale.locale_admin}} data-country={{Locale.locale_country}} data-start={{this:start_date}} data-end={{this:end_date}}/>
                <img class="suitcaseFrame img-responsive"  src="/assets/img/suitcaseFrame.png" alt="Suitcase Frame">
            </div>
            <div class="card-img-overlay">
                <h5 class="card-title suitcase-title"> {{Locale.locale_city}} </h5>
                <div class="trip-details">
                    <p class="badge travel-dates py-2" >{{start_date}} - {{end_date}}</p>
                    <p class="badge travel-category py-2">{{travel_category}}</p>
                </div>
            </div>
        </div>
    </div>
</div>