<div class="page-header header-filter" data-parallax="true" style="background-image: url('/assets/img/city-profile.jpg');"></div>
  <div class="main main-raised">
    <div class="profile-content">
      <div class="container">
        <div class="row">
          <div class="col-md-6 ml-auto mr-auto">
            <div class="profile">
              <div class="avatar">
                <img src="{{user.user_image}}" alt="Circle Image" class="img-raised rounded-circle img-fluid">
              </div>
              <div class="name">
                <h3 class="title">{{user.username}}</h3>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          {{#each user.Suitcases}}
        
            {{> suitcase-card }}
          
          {{/each}}
        </div>
  </div>
  </div>
  </div>

  <!-- Suitcase Items Modal -->
  <div class="modal fade" id="opencase-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">USERNAME 's CITY suitcase</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div id="items">
            <!-- Toiletries -->
            <div class="row">
              <div class="offset-1 col-11">
                <div class="title row">
                  <span class="badge badge-pill badge-info">Toiletries</span>
                </div>
                <div class="row" id="toiletries">
                  <div class="form-check offset-1 col-5">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" value=""checked> Tootbrush
                      <span class="form-check-sign">
                        <span class="check"></span>
                      </span>
                    </label>
                  </div>
                  <div class="form-check offset-1 col-5">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" value=""checked> Tootpaste
                      <span class="form-check-sign">
                        <span class="check"></span>
                      </span>
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <!-- Clothing -->
            <div class="row">
              <div class="offset-1 col-11">
                <div class="title row">
                  <span class="badge badge-pill badge-primary">Clothing</span>
                </div>
                <div class="row" id="clothing">
                    <div class="form-check offset-1 col-5">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" value=""checked> Pajamas
                      <span class="form-check-sign">
                        <span class="check"></span>
                      </span>
                    </label>
                  </div>
                  <div class="form-check offset-1 col-5">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" value=""checked> T-Shirt
                      <span class="form-check-sign">
                        <span class="check"></span>
                      </span>
                    </label>
                  </div>
                </div>
              </div>
            </div>

            <!-- Accessories -->            
            <div class="row">
              <div class="offset-1 col-11">
                <div class="title row">
                  <span class="badge badge-pill badge-default">Accessories</span>
                </div>
                <div class="row" id="accessories">
                  <div class="form-check offset-1 col-5">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" value=""checked> Hat
                      <span class="form-check-sign">
                        <span class="check"></span>
                      </span>
                    </label>
                  </div>
                  <div class="form-check offset-1 col-5">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" value=""checked> Scarf
                      <span class="form-check-sign">
                        <span class="check"></span>
                      </span>
                    </label>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-round" data-dismiss="modal" src="assets/suitcase/:id">Open Suitcase</button>
            <button type="button" class="btn btn-primary btn-round">Add Selected Items</button>
        </div>
      </div>
    </div>
  </div>